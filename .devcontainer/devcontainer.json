{
  "name": "AdamRMS",
  "dockerComposeFile": "docker-compose.yml",
  "service": "app",
  "workspaceFolder": "/workspace",
  "workspaceMount": "source=${localWorkspaceFolder},target=/workspace,type=bind,consistency=cached",

  "features": {
    "ghcr.io/devcontainers/features/php:1": {},
    "ghcr.io/devcontainers/features/composer:1": {},
    "ghcr.io/devcontainers/features/mysql-client:1": {}
  },

  // Configure tool-specific properties.
  "customizations": {
    // Configure properties specific to VS Code.
    "vscode": {
      "settings": {
        "php.validate.executablePath": "/usr/local/bin/php",
        "editor.formatOnSave": true,
        "editor.formatOnPaste": true,
        "editor.formatOnSaveMode": "modificationsIfAvailable",
        "[php]": {
          "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
          "editor.formatOnSave": true
        },
        "[twig]": {
          "editor.defaultFormatter": null,
          "editor.formatOnSave": false,
          "editor.formatOnPaste": false
        },
        "emmet.includeLanguages": {
          "twig": "html"
        }
      },
      "extensions": [
        "xdebug.php-debug",
        "bmewburn.vscode-intelephense-client",
        "mrmlnc.vscode-apache",
        "esbenp.prettier-vscode",
        "mblode.twig-language-2",
        "github.vscode-github-actions",
        "DEVSENSE.profiler-php-vscode",
        "DEVSENSE.phptools-vscode"
      ]
    }
  },

  "shutdownAction": "stopCompose",

  "forwardPorts": [
    8080,
    8081,
    8025,
    9000,
    9001
  ],

  "postCreateCommand": "make setup",

  "postStartCommand": "php vendor/bin/phinx migrate && php vendor/bin/phinx seed:run",

  "remoteUser": "vscode",
  "portsAttributes": {
    "8080": {
      "label": "PHP Web Server",
      "onAutoForward": "ignore",
      "protocol": "http"
    },
    "8081": {
      "label": "S3 Emulator (s3mock)",
      "protocol": "http"
    },
    "8025": {
      "label": "Mailpit (Emails)",
      "protocol": "http"
    },
    "9000": {
      "label": "MinIO S3 API",
      "protocol": "http"
    },
    "9001": {
      "label": "MinIO Console",
      "protocol": "http"
    }
  }
}
