{
  "name": "adam-rms/adam-rms",
  "description": "Resource management system for AdamRMS",
  "type": "project",
  "repositories": [
    {
      "type": "vcs",
      "url": "https://github.com/adam-rms/php-mysqli-database-class"
    }
  ],
  "require": {
    "adam-rms/mysqli-database-class": "dev-main",
    "twig/twig": "v3.7.*",
    "ezyang/htmlpurifier": "v4.18.*",
    "sendgrid/sendgrid": "v8.1.*",
    "phpoffice/phpspreadsheet": "1.29.*",
    "ext-zip": "*",
    "ext-mysqli": "*",
    "ext-intl": "*",
    "ext-gd": "*",
    "eluceo/ical": "^0.18.0",
    "aws/aws-sdk-php": "^3.173",
    "sentry/sdk": "3.6.*",
    "firebase/php-jwt": "^5.2",
    "moneyphp/money": "^3.3",
    "picqer/php-barcode-generator": "^2.0",
    "twig/string-extra": "^3.0",
    "hybridauth/hybridauth": "^3.7",
    "robmorgan/phinx": "^0.13.4",
    "loilo/fuse": "^6.5",
    "php": "^8.0.0",
    "zircote/swagger-php": "^3.3.7",
    "stripe/stripe-php": "^14.5",
    "bacon/bacon-qr-code": "^3.0",
    "hidehalo/nanoid-php": "^1.1",
    "mailgun/mailgun-php": "^4.3",
    "symfony/http-client": "^6.4",
    "nyholm/psr7": "^1.8",
    "phpmailer/phpmailer": "^6.9",
    "wildbit/postmark-php": "^6.0",
    "lasserafn/php-initial-avatar-generator": "^4.4",
    "vlucas/phpdotenv": "^5.6",
    "nikic/fast-route": "^1.3"
  },
  "autoload": {
    "psr-4": {
      "App\\": "src/App/"
    },
    "files": [
      "bootstrap.php"
    ]
  },
  "autoload-dev": {
    "psr-4": {
      "Tests\\": "tests/"
    }
  },
  "require-dev": {
    "phpunit/phpunit": "^10.5",
    "phpstan/phpstan": "^1.11",
    "squizlabs/php_codesniffer": "^3.9"
  },
  "scripts": {
    "lint": "@php vendor/bin/phpcs --standard=PSR12 --warning-severity=0 src/App",
    "fmt": "@php vendor/bin/phpcbf --standard=PSR12 src/App",
    "stan": "@php vendor/bin/phpstan analyse src/App --level=max --memory-limit=1G",
    "test": "@php vendor/bin/phpunit"
  },
  "license": "AGPL-3.0-only",
  "config": {
    "allow-plugins": {
      "php-http/discovery": true
    }
  }
}
